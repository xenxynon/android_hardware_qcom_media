cc_library_shared {
    name: "libOmxCore",
    vendor: true,

    srcs: [
        "src/common/omx_core_cmp.cpp",
        "src/common/qc_omx_core.c",
    ] + select(soong_config_variable("ANDROID", "target_board_platform"), {
        "sdm710": ["src/sdm710/registry_table_android.c"],
        "sdm845": ["src/sdm845/registry_table_android.c"],
        default: [],
    }),

    cflags: [
        "-fno-inline",
        "-fno-short-enums",
        "-D_ANDROID_",
    ],

    local_include_dirs: [
        "src/common",
    ],

    header_libs: [
        "libomxcore_headers",
        "libplatformconfig_headers",
        "libutils_headers",
    ],

    export_header_lib_headers: [
        "libomxcore_headers",
    ],

    shared_libs: [
        "libcutils",
        "libplatformconfig"
    ],
}

cc_library_headers {
    name: "libomxcore_headers",
    export_include_dirs: ["inc"],
    vendor: true,
}
